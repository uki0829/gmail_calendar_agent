{
    "manifest_version": 3,
    "name": "Gmail Calendar Agent Control",
    "version": "1.0",
    "description": "Control the Gmail Calendar Agent (Start/Stop).",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}